<%= turbo_stream.update 'model_collection' do %>
	<label for="model" class="block text-sm font-medium leading-6 text-gray-900">Select a Model</label>
	<%= select :model, :model_id, @models.collect {|m| [m.name, m.id]}, {}, class: 'mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6' %>
<% end %>