<div class="card" id="<%= dom_id model_provider %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= model_provider.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= model_provider.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Documentation url:</strong>
    <%= model_provider.documentation_url %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this model provider", model_provider, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this model provider", edit_model_provider_path(model_provider), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
